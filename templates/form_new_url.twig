<div id="new_url2">
    <form id="new_url_form" action="" method="get">
        <input type="hidden" name="action" value="add"/>
        <input type="hidden" name="nonce" value="{{ nonce_add }}"/>

        <div style="margin-bottom: 5px">
            <div class="input-group">
                <div class="input-group-addon">{{ yourls__('Original URL') }}</div>
                <input type="text" id="add-url" class="form-control" name="url" placeholder="http://" style="width:100%"/>
            </div>
        </div>

        <div class="panel-group" style="margin-bottom: 5px">
            {% for panel in panels %}
                {% include panel %}
            {% endfor %}
        </div>

        <button type="submit" id="add-button" class="btn btn-primary" style="width: 100%">{{ yourls__('Create') }}</button>

    </form>
</div>
